$gutter = 16px

//RESETS
*
	-webkit-tap-highlight-color: rgba(0,0,0,0)

body
	-webkit-touch-callout: none
	-webkit-text-size-adjust: none
	-webkit-user-select: none

.navbar-inner
	//background-color: #ffd300 !important
	background-image: -webkit-gradient(linear, left top, left bottom, from(#ffd300), to(#ffbc00))
	background-image: -webkit-linear-gradient(top, #ffd300 0%, #ffbc00 100%)
	background-image: linear-gradient(to bottom, #ffd300 0%, #ffbc00 100%)
	color: #5f4600 !important

//HELPER CLASSES
.right
	float: right

.left
	float: left

.block
	display: block

.hidden
	display: none

//TEXT HELPERS
.text-center
	text-align: center

.text-right
	text-align: right

.text-left
	text-align: left

//MARGIN AND PADDING
.m-top
	margin-top: $gutter

.m-bottom
	margin-bottom: $gutter

.m-h
	margin-top: $gutter
	margin-bottom: $gutter

//MAIN BUTTON CLASSES
.action-btn
	width: 80%
	display: block
	margin: auto auto 16px auto
	border-radius: 50%
	box-shadow: 0 4px 16px rgba(0,0,0,.3)

	&:active
		box-shadow: none
		top: 4px

[data-action]
	position: relative

	& > .status-icon
		position: absolute
		top: 0
		right: 10px
		font-size: 24px
		color: #fff
		width: (@font-size * 1.5)
		height: @width
		line-height: @width
		padding: 4px
		text-align: center
		border-radius: 50%


#map-canvas { height: 100%; }
[data-page=index]
[data-page=home]
	color: #fff !important
	background-image: url('../img/misc.jpg')
	.content-block-title
		color: #fff !important