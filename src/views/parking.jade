//parking jade
.pages.navbar-fixed
	.page.navbar-fixed(data-page="parking")

		.navbar
			.navbar-inner
				.left
					a.link.back(href="#", data-view=".view-main")
						i.icon.icon-back
				
				.center Iniciar estacionamiento

		// Page content
		.page-content
			.row.parking-display.text-center(style="color: rgba(0,0,0,.32); line-height: 64px; margin-top: 15px;")
				.col-20
					i.ion-qr-scanner(data-action="scan-location-code", style="font-size: 48px;")
				.col-40.text-left
					span(style="font-size: 48px;").time 0
					span min
				.col-40.text-right(style='padding-right: 10px;')
					span $
					span(style="font-size: 48px;").price 0.0
			.list-block
				.error-message.color-red
				ul
					li
						.item-content
							.item-inner
								.item-title.label Ubicación
								.item-input 
									select(name="location", placeholder="Cargando ubicaciones...")
					li
						.item-content
							.item-inner
								.item-title.label Vehículo
								.item-input
									select(name="vehicle", placeholder="Cargando vehículos...")
										option AGY181
			.content-block
				.row
					.col-33
						a.button.button-big.button-fill.color-cyan(data-action="less-time")
							i.ion-minus(style="font-size: 24px")
					.col-33
						h1.parking-time-indicator.text-center(style="height: 48px; line-height: 48px; margin: 0; padding: 0; font-size: 44px;")
							span.time 0
							span(style="font-size: 16px; font-weight: normal;") min
					.col-33
						a.button.button-big.button-fill.color-cyan(data-action="more-time")
							i.ion-plus(style="font-size: 24px")

			.content-block
				a.button.button-big.button-fill.button-raised.color-green(data-action="start-parking")
					| Iniciar estacionamiento

			script#location-template(type='text/x-handlebars-template')
				{{#each this}}
				option(value="{{id}}") {{description}}
				{{/each}}


			script#vehicle-template(type='text/x-handlebars-template')
				{{#each this}}
				option {{vehiculo}}
				{{/each}}
